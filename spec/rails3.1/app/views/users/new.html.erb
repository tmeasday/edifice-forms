<%= form_for @user, :remote => @ajax, 
      :html => {:'data-form' => 'show_errors', :'data-type' => @type} do |f| %>
  <%= render_errors(f) %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.label :description %>
  <%= f.text_field :description %>
  
  <button type="submit">Submit</button>
<% end %>